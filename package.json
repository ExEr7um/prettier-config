{
  "name": "@exer7um/prettier-config",
  "version": "0.8.1",
  "description": "Конфигурация Prettier",
  "keywords": [
    "prettier-config",
    "prettier"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ExEr7um/prettier-config.git"
  },
  "license": "MIT",
  "author": {
    "name": "Vasily Kuzin",
    "email": "work@exer7um.com",
    "url": "https://github.com/ExEr7um/prettier-config"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "eslint": "eslint --max-warnings=0",
    "eslint:fix": "eslint --max-warnings=0 --fix",
    "prettier": "prettier --check --ignore-unknown --no-error-on-unmatched-pattern *",
    "prettier:write": "prettier --write --ignore-unknown --no-error-on-unmatched-pattern *",
    "typecheck": "tsc --noEmit"
  },
  "nano-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,json,yaml}": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@prettier/plugin-oxc": "^0.1.3",
    "prettier": "^3.7.4",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-packagejson": "^2.5.20",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "devDependencies": {
    "@exer7um/eslint-config": "2.2.3",
    "husky": "9.1.7",
    "nano-staged": "0.9.0",
    "tsdown": "0.18.1",
    "typescript": "5.9.3"
  }
}
